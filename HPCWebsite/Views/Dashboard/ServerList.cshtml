@using Entity
@model List<Server>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "سرورهای من";
}
<div class="main-content app-content mt-0">
    <div class="side-app">
        <div class="main-container container-fluid">
            <div class="page-header">
                <h1 class="page-title">سرورهای من</h1>
                <div>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">داشبورد</a></li>
                        <li class="breadcrumb-item active" aria-current="page">سرورهای من</li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @if (Model != null && Model.Any())
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive push">
                                    <table class="table table-bordered table-hover mb-0 text-nowrap text-center">
                                        <thead class="bg-primary text-white">
                                            <tr>
                                                <th>ردیف</th>
                                                <th>نام سرور</th>
                                                <th>نوع</th>
                                                <th>پردازنده</th>
                                                <th>رم (گیگ)</th>
                                                <th>فضای ذخیره‌سازی (گیگ)</th>
                                                <th>تعداد GPU</th>
                                                <th>نوع GPU</th>
                                               @*  <th>قیمت روزانه</th>
                                                <th>سطح پشتیبانی</th> *@
                                                <th>زمان تحویل</th>
                                                @* <th>مناسب برای</th> *@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                var server = Model[i];
                                                <tr>
                                                    <td>@(i + 1)</td>
                                                    <td>@server.Name</td>
                                                    <td>@(server.Type == ServerType.CPU ? "CPU" : "GPU")</td>
                                                    <td>@server.Cores هسته</td>
                                                    <td>@server.RamGB</td>
                                                    <td>@server.StorageGB</td>
                                                    <td>@server.GpuCount</td>
                                                    <td>@server.GpuType</td>
                                                   @*  <td>@server.DailyPrice.ToString("N0") تومان</td>
                                                    <td>@server.SupportLevel</td> *@
                                                    <td>@server.DeliveryTime</td>
                                                    @* <td>@server.SuitableFor</td> *@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            هیچ سروری برای شما ثبت نشده است.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
