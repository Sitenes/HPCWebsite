@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc
@using ViewModel
@model CodeViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "کد ورود";
}
<form asp-action="checkcode" asp-controller="user" method="post" class="login100-form validate-form">
    <span class="login100-form-title pb-5">
        ورود
    </span>
    <div class="panel panel-primary">
        <div class="tab-menu-heading">
            <div class="tabs-menu1">
                <!-- Tabs -->
                <ul class="nav panel-tabs justify-content-end">
                    @* <li class="mx-0"><a href="#tab5" class="active" data-bs-toggle="tab">ایمیل</a></li> *@
                    <li class="mx-0"><a href="#tab6" class="active" data-bs-toggle="tab">کد ورود</a></li>
                </ul>
            </div>
        </div>
        <div class="active panel-body tabs-menu-body p-0 pt-5">
            <div class="tab-content">
                <div class="tab-pane active" id="tab6">
                    <div id="mobile-num" class="wrap-input100 validate-input input-group mb-4">
                        <input type="hidden" asp-for="Mobile" />
                        <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                            <i class="zmdi zmdi-email text-muted" aria-hidden="true"></i>
                        </a>
                        <input asp-for="Code" class="input100 border-start-0 form-control ms-0 no-spin" type="number"
                            min="100000" max="1000000" />
                        <br>
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                    <div class="container-login100-form-btn ">
                        <button type="submit" class="login100-form-btn btn-primary">
                            تایید کد
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>